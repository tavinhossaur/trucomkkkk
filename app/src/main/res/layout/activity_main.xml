<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/titulo_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_config"
            android:text="Trucomkkkk"
            android:gravity="start"
            android:textSize="40sp"
            android:fontFamily="@font/fuzzybubblesbold"
            android:layout_marginTop="30dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="5dp"
            app:cardElevation="8dp">

        <TextView
                android:id="@+id/limite_pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45sp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:fontFamily="@font/fuzzybubblesbold"/>

        <ImageView
                android:id="@+id/img_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:rotation="180"
                android:src="@drawable/ic_round_style_24"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/divisor"
            android:layout_width="5dp"
            android:layout_height="200dp"
            android:layout_below="@id/titulo_app"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="40dp" android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/pts_nos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_below="@id/titulo_app"
            android:layout_toStartOf="@id/divisor"
            android:fontFamily="@font/fuzzybubblesreg"
            android:text="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="90sp"/>

    <TextView
            android:id="@+id/pts_eles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_below="@id/titulo_app"
            android:layout_toEndOf="@id/divisor"
            android:fontFamily="@font/fuzzybubblesreg"
            android:text="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="90sp"/>

    <TextView
            android:id="@+id/text_nos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_below="@id/pts_nos"
            android:layout_toStartOf="@id/divisor"
            android:fontFamily="@font/fuzzybubblesbold"
            android:text="NÃ³s"
            android:textSize="30sp"/>

    <TextView
            android:id="@+id/text_eles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_below="@id/pts_nos"
            android:layout_toEndOf="@id/divisor"
            android:fontFamily="@font/fuzzybubblesbold"
            android:text="Eles"
            android:textSize="30sp"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_truco_nos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/text_nos"
            android:layout_toStartOf="@id/divisor"
            android:textAllCaps="false"
            android:fontFamily="@font/fuzzybubblesbold"
            android:textSize="24sp"
            app:cardCornerRadius="30dp"
            app:contentPadding="5dp"
            app:cardElevation="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Truco +3"
                android:textSize="24sp"
                android:fontFamily="@font/fuzzybubblesbold"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_um_nos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/btn_truco_nos"
            android:layout_toStartOf="@id/divisor"
            android:textAllCaps="false"
            android:fontFamily="@font/fuzzybubblesbold"
            android:textSize="24sp"
            app:cardCornerRadius="30dp"
            app:contentPadding="5dp"
            app:cardElevation="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Ponto +1"
                android:textSize="24sp"
                android:fontFamily="@font/fuzzybubblesbold"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_truco_eles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/text_eles"
        android:layout_toEndOf="@id/divisor"
        android:textAllCaps="false"
        android:fontFamily="@font/fuzzybubblesbold"
        android:textSize="24sp"
        app:cardCornerRadius="30dp"
        app:contentPadding="5dp"
        app:cardElevation="8dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Truco +3"
            android:textSize="24sp"
            android:fontFamily="@font/fuzzybubblesbold"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_um_eles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/btn_truco_eles"
            android:layout_toEndOf="@id/divisor"
            android:textAllCaps="false"
            android:fontFamily="@font/fuzzybubblesbold"
            android:textSize="24sp"
            app:cardCornerRadius="30dp"
            app:contentPadding="5dp"
            app:cardElevation="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Ponto +1"
                android:textSize="24sp"
                android:fontFamily="@font/fuzzybubblesbold"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:fontFamily="@font/fuzzybubblesbold"
            android:textSize="24sp"
            app:cardCornerRadius="50dp"
            app:contentPadding="10dp"
            app:cardElevation="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/fuzzybubblesbold"
                app:drawableEndCompat="@drawable/ic_round_autorenew_24"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>